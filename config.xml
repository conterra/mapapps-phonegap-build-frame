<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="de.conterra.mapapps.hybrid" 
    version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>map.apps</name>
    <description>map.apps Hybrid app</description>
    <author email="conterra@conterra.de" href="http://conterra.de">con terra GmbH</author>
    
    <content src="index.html" />

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

	<platform name="windows" >
		<icon src="www/res/icon/windows/Square150x150Logo.scale-100.png"     platform="windows"   width="150"  height="150" />
        <icon src="www/res/icon/windows/Square30x30Logo.scale-100.png"       platform="windows"   width="30"   height="30" />
        <icon src="www/res/icon/windows/StoreLogo.scale-100.png"             platform="windows"   width="50"   height="50" />
		<icon src="www/res/icon/windows/Square44x44Logo.scale-100.png" 		 platform="windows"  width="44" height="44" />
        <icon src="www/res/icon/windows/Square70x70Logo.scale-100.png" 		 platform="windows"  width="70" height="70" />
        <icon src="www/res/icon/windows/Square71x71Logo.scale-100.png" 		 platform="windows"  width="71" height="71" />
        <icon src="www/res/icon/windows/Square310x310Logo.scale-100.png" 	 platform="windows"  width="310" height="310" />
        <icon src="www/res/icon/windows/Wide310x150Logo.scale-100.png" 		 platform="windows"  width="310" height="150" />
	</platform>

	<preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />

	<preference name="windows-arch" value="anycpu" />
    <preference name="windows-target-version" value="10.0" />
    <preference name="windows-phone-target-version" value="10.0" />
	<preference name="android-build-tool" value="gradle" />

    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <engine name="windows" spec="^5.0.0" />

	<icon src="www/img/icons/app-icon.png" />
	<icon src="www/img/icons/app-icon-57px.png" width="57" height="57" />
	<icon src="www/img/icons/app-icon-72px.png" width="72" height="72" />
	<icon src="www/img/icons/app-icon-76px.png" width="76" height="76" />
	<icon src="www/img/icons/app-icon-114px.png" width="114" height="114" />
	<icon src="www/img/icons/app-icon-120px.png" width="120" height="120" />
	<icon src="www/img/icons/app-icon-144px.png" width="144" height="144" />
	<icon src="www/img/icons/app-icon-152px.png" width="152" height="152" />
	<icon src="www/img/icons/app-icon-196px.png" width="196" height="196" />
	<icon src="www/img/icons/app-icon-512px.png" width="512" height="512" />

    <plugin name="cordova-plugin-device-orientation" spec="^1.0.7" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />

    <!-- Additional Cordova Core Plugins  -->
    <!--
    <plugin name="cordova-plugin-battery-status" spec="^1.2.4" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-media-capture" spec="^1.4.3" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="^1.3.3" />
    <plugin name="cordova-plugin-globalization" spec="^1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-vibration" spec="^2.1.5" />-->

</widget>
